	output_at_each_step=1,
!	filename = %s.twi,
&end


!&alter_elements name=TWISS3,item=VERBOSE,value=1 &end

&optimization_setup
	mode = "minimize", method = "simplex",
	target = 1e-10,
	tolerance = 1e-12, n_passes = 3, n_evaluations = 2500, log_file = /dev/tty, 
	n_restarts = 10,
	verbose = 1, output_sparsing_factor = 10
&end

