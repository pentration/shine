&run_setup
        lattice = optim/ltu0.lte,
        default_order = 2,
!        use_beamline = DBA31,
        p_central_mev = 8.0e3,
&end


&run_control
        n_steps = 1
&end

&twiss_output
	matched = 0,
!	beta_x			= 1.50e+01, 
!	alpha_x			=-0.00e-16,
!	beta_y			= 1.50e+01, 
